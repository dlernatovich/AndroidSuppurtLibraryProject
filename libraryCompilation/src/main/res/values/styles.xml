<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SnackBar" />

    <style name="SnackBar.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/sb__snack_bkgnd</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SnackBar.Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_bottom</item>
        <item name="android:layout_toLeftOf">@id/snackButton</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SnackBar.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sb__button_selector</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_bottom</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/sb__default_button_text_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:editable">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MessageBar" />

    <style name="MessageBar.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/mb__messagebar_background</item>
        <item name="android:clickable">true</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/mb__messagebar_divider</item>
        <item name="android:dividerPadding">10dp</item>
    </style>

    <style name="MessageBar.Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageBar.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/mb__item_background_holo_dark</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MaterialsDeign" />

    <style name="MaterialsDeign.CustomMaterialsTheme" parent="@android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MaterialsActionBar</item>
        <item name="android:buttonStyle">@style/MaterialsDeign.ButtonBlue</item>
        <item name="android:imageButtonStyle">@style/MaterialsDeign.ButtonBlue.Image</item>
        <item name="android:colorBackground">@color/materials_background_color</item>
        <item name="android:windowBackground">@color/materials_background_color</item>
        <item name="android:popupMenuStyle">@style/MaterialsDeign.MenuStyle</item>
        <item name="android:itemTextAppearance">@style/MaterialsDeign.MenuTextStyle</item>
        <item name="android:textViewStyle">@style/MaterialsDeign.TextView</item>
        <item name="android:editTextStyle">@style/MaterialsDeign.EditText</item>
        <item name="android:checkboxStyle">@style/MaterialsDeign.CheckBoxStyle</item>
    </style>

    <style name="MaterialsActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/materials_header_color</item>
        <item name="android:titleTextStyle">@style/MaterialsDeign.ActionBar.TitleTextStyle</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="MaterialsDeign.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dimen_2</item>
    </style>

    <style name="MaterialsDeign.CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:paddingLeft">@dimen/dimen_2</item>-->
    </style>

    <style name="MaterialsDeign.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialsDeign.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialsDeign.MenuStyle" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">@color/materials_header_color</item>
    </style>

    <style name="MaterialsDeign.MenuTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialsDeign.ButtonBlue" parent="android:Widget.Holo.Button">
        <item name="android:layout_margin">@dimen/dimen_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/selector_button_blue</item>
        <item name="android:textSize">@dimen/materials_button_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fffffffd</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MaterialsDeign.ButtonBlue.Image" parent="android:Widget.Holo.ImageButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/selector_button_blue_rect</item>
        <item name="android:textSize">@dimen/materials_button_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fffffffd</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MaterialsDeign.ActivityStyle">
        <item name="android:background">@color/materials_background_color</item>
    </style>

</resources>
