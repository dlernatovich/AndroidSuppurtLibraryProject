<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artlite.com.androidsupportlibraryproject">

    <application
        android:name=".main.CurrentApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.SampleActivity"
            android:configChanges="orientation|keyboard"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="application_database.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".ui.activities.LineChartActivity"
            android:configChanges="orientation|keyboard"
            android:label="@string/title_activity_chart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.UIActivity"
            android:configChanges="orientation|keyboard"
            android:label="@string/title_activity_pie_chart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:configChanges="orientation|keyboard"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboard"
            android:screenOrientation="portrait"
            android:name=".ui.activities.RegistrationActivity"
            android:label="@string/title_activity_registration" />
    </application>

</manifest>
